{% extends 'base.html.twig' %}

{% block title %}Hello UsersController!{% endblock %}

{% block body %}

    <div class="alert alert-success text-center">
        <h4>Users List</h4>
    </div>

    <div class="content border p-3 rounded">

        <div class="d-flex p-2 pt-0 mb-2 align-items-center justify-content-between border-bottom">

            <div class="input-group search-div" style="max-width: 400px;">
                <span id="addon-wrapping" class="input-group-text"><i class="bi bi-search"></i></span>
                <input class="form-control me-2" type="search" placeholder="Search">
            </div>

            <a id="create-member"
               class="link-primary link-underline-primary link-underline-opacity-0 link-underline-opacity-100-hover"
               href="{{ path('create_user') }}">
                <i class="bi bi-plus-lg"></i>
                Add new Member
            </a>

        </div>

        <table class="table table-hover shadow table-bordered">
            <thead class="table-secondary">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Fullname</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                </tr>
            </thead>
  
            <tbody>
                {% for user in users %}
                <tr>
                    <th scope="row">{{ user.id }}</th>
                    <td>{{ user.fullname }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
