<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="{{ asset('./bs/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('./bs/css/bootstrap.min.css.map') }}" rel="stylesheet">
        <link href="{{ asset('./bs/css/bootstrap-icons.min.css') }}" rel="stylesheet">

        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>

    <body>
        {{ include('_navbar.html.twig') }}
        <div class="container mt-5">
            {% block body %}{% endblock %}
        </div>


        <div id="my-modal"class="modal" tabindex="-1">
            <div class="modal-dialog">
                <div id="modal-content"class="modal-content">

                    <div class="modal-header">
                        <h5 id="modal-title" class="modal-title">Modal title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div id="modal-body" class="modal-body">
                        <p>Modal body text goes here.</p>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>

                </div>
            </div>
        </div>

        <script src="{{ asset('./bs/js/jQuery-3.7.1.js') }}"></script>
        <script src="{{ asset('./bs/js/bootstrap.bundle.min.js') }}"></script>
        <script src="{{ asset('./bs/js/bootstrap.bundle.min.js.map') }}"></script>
    </body>
</html>
